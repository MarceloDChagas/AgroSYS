generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  COMMON
  ADMIN
}

enum ProductStatus {
  AVAILABLE
  OUT_OF_STOCK
  DISCONTINUED
}

enum SaleStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum InvoiceStatus {
  DRAFT
  ISSUED
  PAID
  CANCELLED
}

enum EUnit {
  KG
  LITRO
  UNIDADE
  SACA
  CAIXA
}

enum HarvestStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum AlertPriority {
  URGENT
  WARNING
  INFO
}

enum AlertStatus {
  ACTIVE
  RESOLVED
  DISMISSED
}

enum ActivityType {
  HARVEST
  FERTILIZER
  MAINTENANCE
  INVENTORY
  PLANTING
  IRRIGATION
  PESTICIDE
}

enum ActivityStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum MaintenanceType {
  PREVENTIVE
  CORRECTIVE
  PREDICTIVE
}

enum MaintenanceStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum CostCategory {
  INPUTS
  LABOR
  MAINTENANCE
  FUEL
  OTHER
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  role     Role   @default(COMMON) // Pode ser COMMON ou ADMIN
  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Tool {
  id        String  @id @default(uuid())
  toolName  String
  status    String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Product {
  id          String        @id @default(uuid())
  name        String
  description String?
  price       Decimal       @db.Decimal(10, 2)
  quantity    Int           @default(0)
  status      ProductStatus @default(AVAILABLE)
  category    String?
  
  // Relacionamentos
  saleItems   SaleItem[]
  supplyEntries InputMaterialEntry[]

  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("products")
}

model Sale {
  id          String     @id @default(uuid())
  uapId       String
  totalAmount Decimal    @db.Decimal(10, 2)
  status      SaleStatus @default(PENDING)
  saleDate    DateTime   @default(now())
  
  // Relacionamentos
  uap        UAP        @relation(fields: [uapId], references: [id])
  saleItems  SaleItem[]
  invoice    Invoice?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("sales")
}

model SaleItem {
  id        String  @id @default(uuid())
  saleId    String
  productId String
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2)
  totalPrice Decimal @db.Decimal(10, 2)
  
  // Relacionamentos
  sale    Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("sale_items")
}

model Invoice {
  id            String        @id @default(uuid())
  saleId        String        @unique
  uapId         String
  invoiceNumber String        @unique
  totalAmount   Decimal       @db.Decimal(10, 2)
  status        InvoiceStatus @default(DRAFT)
  issueDate     DateTime      @default(now())
  dueDate       DateTime?
  paidDate      DateTime?
  
  // Relacionamentos
  sale Sale @relation(fields: [saleId], references: [id])
  uap  UAP  @relation(fields: [uapId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("invoices")
}

model InputMaterialEntry {
  id         String   @id @default(uuid())
  date       DateTime
  amount     Decimal  @db.Decimal(10, 2) 
  unit       EUnit
  productId  String
  product    Product  @relation(fields: [productId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("input_material_entries")
}

model Harvest {
  id            String        @id @default(uuid())
  harvestDate   DateTime
  product       String
  quantity      Decimal       @db.Decimal(10, 2)
  unit          String
  uap           String
  responsible   String
  cycle         String
  status        HarvestStatus @default(SCHEDULED)
  equipment     String?
  observations  String?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("harvests")
}

model UAP {
  id          String   @id @default(uuid())
  name        String
  location    String
  area        Decimal  @db.Decimal(10, 2)
  cropType    String
  responsible String
  observations String?

  // Relacionamentos
  sales       Sale[]
  invoices    Invoice[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("uaps")
}

// Novas tabelas para funcionalidades do dashboard

model Alert {
  id          String       @id @default(uuid())
  title       String
  description String
  priority    AlertPriority
  status      AlertStatus  @default(ACTIVE)
  type        String       // inventory, maintenance, harvest, etc.
  entityId    String?      // ID da entidade relacionada (produto, ferramenta, etc.)
  entityType  String?      // Tipo da entidade (product, tool, harvest, etc.)
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
  
  @@map("alerts")
}

model Activity {
  id          String        @id @default(uuid())
  title       String
  description String?
  type        ActivityType
  status      ActivityStatus @default(SCHEDULED)
  scheduledDate DateTime
  completedDate DateTime?
  location    String
  responsible String
  uapId       String?
  toolId      String?
  productId   String?
  quantity    Decimal?      @db.Decimal(10, 2)
  unit        String?
  observations String?
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now()) @updatedAt
  
  @@map("activities")
}

model Maintenance {
  id          String           @id @default(uuid())
  title       String
  description String?
  type        MaintenanceType
  status      MaintenanceStatus @default(SCHEDULED)
  scheduledDate DateTime
  completedDate DateTime?
  toolId      String
  responsible String
  cost        Decimal?         @db.Decimal(10, 2)
  observations String?
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @default(now()) @updatedAt
  
  @@map("maintenances")
}

model FertilizerApplication {
  id          String   @id @default(uuid())
  title       String
  description String?
  applicationDate DateTime
  uapId       String
  productId   String
  quantity    Decimal  @db.Decimal(10, 2)
  unit        String
  responsible String
  method      String?  // Aplicação foliar, solo, etc.
  observations String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  
  @@map("fertilizer_applications")
}

model Cost {
  id          String       @id @default(uuid())
  title       String
  description String?
  amount      Decimal      @db.Decimal(10, 2)
  category    CostCategory
  date        DateTime
  uapId       String?
  activityId  String?
  maintenanceId String?
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
  
  @@map("costs")
}

model ActivityLog {
  id          String   @id @default(uuid())
  title       String
  description String?
  type        ActivityType
  entityId    String?  // ID da entidade relacionada
  entityType  String?  // Tipo da entidade
  userId      String?  // Usuário que realizou a ação
  metadata    Json?     // Dados adicionais em formato JSON
  
  createdAt   DateTime @default(now())
  
  @@map("activity_logs")
}

